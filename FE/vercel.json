{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://iotfarm.onrender.com/api/:path*" },

    { "source": "/(.*)", "destination": "/index.html", "missing": [{ "type": "filesystem" }] }
  ]
}
